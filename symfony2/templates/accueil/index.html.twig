{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}

        <div class="col-12 mt-3">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Accueil</a></li>
                </ol>
            </nav>
        </div>

        {% for categorie in categories %}
            <div class="col-12 col-sm-6 col-md-4 col-xl-3 col-xxl-2 categorie mt-3">
                <a href="/categorie/{{ categorie.id }}">
                        <div class="card" style="">
                            <img class="card-img-top img-fluid" src="https://picsum.photos/id/{{categorie.id+50}}/400/200" alt="Card image cap">
                            <div class="card-body">
                                <h5 class="card-title">{{ categorie.nom }}</h5>
                                <p class="card-text"></p>
                            </div>
                        </div>
                </a>
            </div>
            
        {% endfor %}

{% endblock %}
