{% extends 'base.html.twig' %}

{% block title %}Hello AccueilController!{% endblock %}

{% block body %}
<h1>{{sousCategorie.nom}}</h1>


<div class="container">
    <div class="row">
        {% for produit in sousCategorie.produits %}
            <div class="col-12  categorie mt-3">
                <a href="/produit/{{ produit.id }}">
                    <img src="{{produit.image}}" alt="">
                    {{ produit.nom }}
                </a>
            </div>
            
        {% endfor %}
    </div>
</div>
{% endblock %}
