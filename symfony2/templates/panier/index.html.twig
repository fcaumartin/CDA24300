{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}

    <div class="panier">
    {% for elt in panier %}
        <div class="panier-item">
            {{ elt.produit.nom }}
            <br>
            {{ elt.quantite }}
            <a class="btn btn-primary" href="/panier/add/{{ elt.produit.id }}">++</a>
            <a class="btn btn-primary" href="/panier/del/{{ elt.produit.id }}">--</a>
        </div>
    {% endfor %}
    </div>

{% endblock %}
